config FB_TCC
	bool "Telechips TCC Frame buffer support"
	depends on FB && ARCH_TCC
	default y
	select FB_CFB_FILLRECT
	select FB_CFB_COPYAREA
	select FB_CFB_IMAGEBLIT
	help
	  Framebuffer driver for Telechips TCC series.
	  If unsure, say N.

config FB_VIOC
	bool "Telechips VIOC Frame buffer support"
	depends on FB_TCC && ARCH_TCC
	default y
	select FB_CFB_FILLRECT
	select FB_CFB_COPYAREA
	select FB_CFB_IMAGEBLIT
	help
	  Framebuffer driver for Telechips VIOC series.
	  If unsure, say N.

config FB1_SUPPORT
	bool "FB1 support"
	default n
	depends on FB_VIOC && (ARCH_TCC803X)
	---help---
		Framebuffer 1 driver for Telechips TCC series.

config FB_NEW
	bool "Telechips New Frame buffer support"
	depends on FB && ARCH_TCC
	select FB_CFB_FILLRECT
	select FB_CFB_COPYAREA
	select FB_CFB_IMAGEBLIT
	default n
	help
		Choose this option if you want to use new fb driver.

config FB1_MEMORY_SIZE
       int "FB1 memory size"
       default 20
       depends on (FB1_SUPPORT  && ARCH_TCC897X || ARCH_TCC570X)
       ---help---
           FB1 Memory size Mbyte.

config SYNC_FB
	bool "Telechips fb fence sync option"
	depends on (SYNC || SYNC_FILE) && SW_SYNC && FB
	default y

config TCC_MIPI
	bool "Telelechips MIPI DSI controller"
	default n

