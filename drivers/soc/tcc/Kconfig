#
# Telechips SOC drivers
#
menuconfig SOC_TCC
	bool "Telechips SOC drivers support"

if SOC_TCC

config TCC_ECID_SUPPORT
	bool "TCC ECID(CPU ID) SUPPORT"
        default n
	help
	  Support for the TCCXXXX demo board, Say Y here if you use ECID

config PMAP
	bool "PMAP (Physical memory MAP) helper driver"
	default y
	help
	  Say Y here if you want to use PMAP driver for Telechips SoCs.

if PMAP

config PMAP_TO_CMA
	bool "CMA allocation for PMAP (Physical memory MAP)"
	depends on DMA_CMA
	default n
	help
	  Say Y here to enable CMA allocation for pmap.

config PMAP_SECURED
	bool "Secured PMAP (Physical memory MAP) support"
	default y
	help
	  Say N here to ignore "telechips,pmap-secured" property.

config PMAP_DEBUG
	bool "PMAP (Physical memory MAP) debug message"
	depends on DEBUG_KERNEL
	default n
	help
	  Turns on debug messages in PMAP helper driver.

endif # PMAP

config PMAP_CA7S
	bool "Cortex-A7 Single PMAP (Physical memory MAP) Allocation"
	depends on !(ARCH_TCC897X) &&  (ARCH_TCC803X)
	default n
	help
	  Say Y here if you want to use PMAP driver for Telechips SoCs.

config PLATFORM_AVN
	bool "Telechips Automotive Platform"
	default n

config PLATFORM_STB
	bool "Telechips Consumer(STB) Platform"
	default n

config TCC_MICOM
	bool "Telechips Support MICOM"
	default n
	depends on (ARCH_TCC802X)

config TCC_CORE_RESET
	bool "Telechips Core Reset Feature for TCC803x"
	depends on ARCH_TCC803X && TCC_WATCHDOG
	default n
	help
	  Select this option to enable core reset feature on TCC803x platform.

endif # SOC_TCC
