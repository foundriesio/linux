/dts-v1/;

#include "tcc/tcc8021-android-nand.dtsi"

/ {
	lvds: lvds@12380040{
		status = "okay";
	};

	fld0800 {
		compatible = "telechips,lvds-fld0800";
		status = "okay";
		lvds0 = <&lvds>;
		//power-on-gpios = ;                // LCD_ON
		display-on-gpios = <&gpb 28 0>;     // LCD_DISP
		reset-gpios = <&gpb 29 0>;          // LCD_RST
		lvds-stby-gpios = <&gpb 19 0>;      // LCD_DE = LVDS_STBY in LVDS
		//lvds-power-gpios = ;              // LVDS_EN
		//lvds-power-gpios1 = ;             // V_5V0_EN

		display-timings {
			native-mode = <&timing0>;
			timing0: timing {
				clock-frequency = <51200000>;
				hactive = <1024>;
				vactive = <600>;
				hfront-porch = <147>;
				hback-porch = <147>;
				hsync-len = <19>;
				vback-porch = <10>;
				vfront-porch = <25>;
				vsync-len = <2>;
			};
		};
	};
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_data>;
	status = "okay";
};

