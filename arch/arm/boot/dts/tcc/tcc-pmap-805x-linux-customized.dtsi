#define INST_1ST_VIDEO_HEIGHT       (2176)
#define INST_1ST_MAX_FRAMEBUFFERS   (7)
#else
#define INST_1ST_VIDEO_WIDTH        (1920)
#define INST_1ST_VIDEO_HEIGHT       (1088)
#define INST_1ST_MAX_FRAMEBUFFERS   (24)
