/dts-v1/;

#include "tcc8980.dtsi"
#include "tcc898x-linux.dtsi"

/ {
	model = "Telechips TCC8980 DV Ref. Board";
	compatible = "telechips,tcc8980", "telechips,tcc898x";

	chosen {
	};

	memory@20000000 {
		device_type = "memory";
		reg = <0x20000000 0x80000000>;
	};

	cpu0-regulators {
		compatible = "regulator-gpio";

		regulator-name = "vdd_cpu0";
		regulator-min-microvolt = < 950000>;
		regulator-max-microvolt = <1100000>;
		regulator-type = "voltage";
		regulator-always-on;

		gpios = <&gpe 8 0x4>;
		gpios-states = <1>;

		states = < 950000 0x0
			  1100000 0x1
		>;

		startup-delay-us = <100000>;
		enable-active-high;
	};

	tcc_pm {
		wakeup,powerkey = <PMU_WKUP_GP_D13 WAKEUP_ACT_LO>;
	};

	gpio_keys_polled {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;
		poll-interval = <100>;
		autorepeat;
		button@0 {
			label = "Power Key";
			linux,code = <116>;
			gpios = <&gpd 13 1>;
		};
	};

	panel {
		status = "okay";
		compatible = "telechips,hdmi4k";
	};

	tve@12200000 {
		status = "okay";
	};

	composite {
		status = "okay";
	};

	//component {
	//	status = "okay";
	//	io_port_num = <0>;
	//};

	output_starter {
		status = "okay";
	};

	overlaymixer:overlaymixer@1A100000 {
		status ="okay";
		contiguousSize = <0x1000000>;  /* 16MB (if > 512MB RAM) refer to Guide 27 Page */
		baseAddress = <0x20000000>;
		physSize = <0x80000000>; /*  DRAM size (0x40000000 = 1GB, 0x80000000 = 2GB) */
	};

	fbdisplay: fbdisplay@12000000 {
		telechips,fbdisplay_num = <0>;
		status ="okay";
	};

	tcc_overlay_drv {
		compatible = "telechips,tcc_overlay";
		status = "okay";
		fbdisplay-overlay = <&fbdisplay>;
	};

	tcc_vsync_drv {
		compatible = "telechips,tcc_vsync";
		display-vioc0 = <&vioc_display0>;
		display-vioc1 = <&vioc_display1>;
		status = "okay";
	};

	tcc_video_viqe {
		compatible = "telechips,tcc_viqe";
		status ="okay";
		tcc_viqe_viqe_common {
			board_num=<1>;
		};
	};

	scaler_drv@1 {
		rdmas = <&vioc_rdma16>;
		scalers = <&vioc_sc1 17>;	/* id:1, path:17 */
		wmixs = <&vioc_wmix5 6>;	/* id:5, path:6 */
		wdmas = <&vioc_wdma6>;
		settop_support = <1>;
		status = "okay";
	};

	scaler_drv@3 {
		rdmas = <&vioc_rdma7>;
		scalers = <&vioc_sc3 7>;	/* id:3, path:7 */
		wmixs = <&vioc_wmix1 2>;	/* id:1, path:2 */
		wdmas = <&vioc_wdma1>;
		settop_support = <1>;
		status = "okay";
	};

	wmixer_drv@0 {
		status = "okay";
	};

	wmixer_drv@1 {
		status = "okay";
	};

	vout_drv@0 {
		status = "okay";
	};

	sdhc@16450000 { // eMMC Boot
		status = "okay";
		controller-id = <1>;
		bus-width = <8>;
		max-frequency = <200000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd1_1_idle>;
		pinctrl-1 = <&sd1_1_clk &sd1_1_cmd &sd1_1_bus8>;
		//cd-inverted;
		//wp-inverted;
		non-removable;
		//broken-cd;
		//keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

		//wp-gpios = <&gpb 7 0>;
		//cd-gpios = <&gpext1 5 0>;
		vctrl-gpio = <&gpa 5 0>;
		pwr-gpio = <&gpe 16 0>;
		emmc-rst-gpio = <&gpa 6 0>; // To do : add handling code

		cd-polling;
		//wifi-polling;

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
		cap-1-8V-ddr;
		cap-uhs-ddr50;

		/* emmc hs200 & SD3.0 Common */
		//cap-vdd-165-195;

		/* SD3.0 SDR12 */
		//cap-uhs-sdr12;

		/* SD3.0 SDR25 */
		//cap-uhs-sdr25;
		//cap-uhs-driver_type_a;

		/* SD3.0 SDR50 */
		//cap-uhs-sdr50;
		//cap-uhs-driver_type_c;

		/* SD3.0 SDR104 */
		//cap-uhs-sdr104;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	sdhc@16460000 { // SD Card
		status = "okay";
		controller-id = <2>;
		bus-width = <4>;
		max-frequency = <200000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd2_1_idle>;
		pinctrl-1 = <&sd2_1_clk &sd2_1_cmd &sd2_1_bus4>;
		cd-inverted;
		non-removable;
		//wp-inverted;
		//non-removable;
		//broken-cd;
		//keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

//		wp-gpios = <&gpsd0 10 0>;
//		cd-gpios = <&gpc 25 0>;
		vctrl-gpio = <&gpc 25 0>;
		//pwr-gpio = <&gpext2 7 0>;

		//cd-polling;
		//wifi-polling;

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
		//cap-1-8V-ddr;
		//cap-uhs-ddr50;

		/* emmc hs200 & SD3.0 Common */
		//cap-vdd-165-195;

		/* SD3.0 SDR12 */
		//cap-uhs-sdr12;

		/* SD3.0 SDR25 */
		//cap-uhs-sdr25;
		//cap-uhs-driver_type_a;

		/* SD3.0 SDR50 */
		//cap-uhs-sdr50;
		//cap-uhs-driver_type_c;

		/* SD3.0 SDR104 */
		//cap-uhs-sdr104;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	hdmi_tx_20@12400000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_hpd>;
		hdmi_i2c_mapping = <&i2c3>;
		hdmi_i2c_mapping_val = <0xC 0xF 0x0E>;
		verbose = <0>; // 0 disable, 1 basic, 2 io
		gpios = <&gphdmi 1 0>; // HPD for output starter
		hdmi_phy_type = <2>; // 0 8980, 1 8985_OTT, 2 8980 DV 0.1
	};

	hdmi_cec_20@16053000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_cec>;
	};

	i2c@16310000 {
		port-mux = <8>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c8_bus>;
	};

	i2c@16330000 {
		port-mux = <14>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c14_bus>;
	};

	/* USB 2.0 HOST */
	ehci_phy@111A0010 {
		status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpc 20 0>;
	};

	mux_host_phy@111A00DC {
		status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpc 21 0>;
	};

	dwc_otg_phy@111A0100 {
		status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpc 21 0>;
	};

	ehci@11200000 {
		status = "okay";
		hcd_id = <0>;
		phy-type = <1>;	    //pico phy = 1, nano phy = 0
//		hosten-ctrl-able;
//		hosten-gpio = <&gpe 15 0>;
		vbus-ctrl-able;
		vbus-gpio = <&gpc 20 0>;
		//vbus-source-ctrl;
		//pinctrl-names = "default";
		//vdd_ehci-supply = <&vdd_v5p0_reg>;

		//sq_level_ctl;
		TXVRT = <0xB>;
		TXRISET = <0x3>;
		TXAT = <0x1>;
	};

	ohci@11300000 {
		status = "okay";
//		hosten-ctrl-able;
//		hosten-gpio = <&gpe 15 0>;
		vbus-ctrl-able;
		vbus-gpio = <&gpc 20 0>;
		//vbus-source-ctrl;
		//vdd_ohci-supply = <&vdd_v5p0_reg>;
	};

	/* USB 2.0 OTG */
	dwc_otg@11080000 {
		status = "okay";
		phy-type = <1>;     //pico phy = 1, nano phy = 0
		vbus-ctrl-able;
		vbus-gpio = <&gpc 21 0>;
	};

	i2s@16101000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_clks &m0dai1_d0>;
		port-mux = <1>;
		status = "disable";
	};

	i2s@16201000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_clks &m1dai1_d0>;
		port-mux = <1>;
		status = "okay";
	};

	spdif@16102000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_spdif_tx>;
		port-mux = <1>;
		status = "disable";
	};

	spdif@16202000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_spdif_tx>;
		port-mux = <1>;
		status = "okay";
	};

	adma@16100000 {
		status = "disable";
	};

	adma@16200000 {
		status = "okay";
	};

	wm8524: wm8524@0 {
		compatible = "wolfson,wm8524";
		status = "okay";

		codec_aif-gpios = <&gpd 6 0>;
		codec_mute_ang-gpios = <&gpsd1 7 0>;
		codec_mute_ctl-gpios = <&gpc 30 0>;
		/* value to enable mute*/
		codec_mute_ang-mute_value = <0>;
	};

	sound@0 {
		compatible = "telechips,snd-card";
		card-name = "TCC8980 STB Card";
		status = "okay";

		telechips,dai-link@0 {
			stream-name="I2S_1";

			codec,format = "i2s"; // i2s, left_j, right_j
			codec,continuous-clock;

			mclk_div = <16>; // 4,6,8,16
			bclk_ratio = <64>; // 32,48,64fs
			pcm = <&adma1>;
			dai = <&i2s1>;
			codec = <&wm8524>;
			codec,dai-name = "wm8524-hifi";
		};

		telechips,dai-link@1 {
			stream-name="SPDIF_1";

			pcm = <&adma1>;
			dai = <&spdif1>;
		};
	};

	remote@16040000 {
		int-gpios = <&gpc 28 0>;
		pinctrl-names = "default";
		pinctrl-0 = <&remote_c28>;
		wakeupsrc = <011>; //RMISEL is 0x3 : GPIO_C28
		status = "okay";
	};

	gmac@11700000 {
		status = "okay";
		phyrst-gpio = <&gpc 9 0>;
		phy-interface = "rgmii";
		ecid-mac-addr;
		txclk-o-dly = <16>;
		txclk-o-inv = <0>;
		txclk-i-dly = <0>;
		txclk-i-inv = <0>;
		txen-dly = <0>;
		txer-dly = <0>;
		txd0-dly = <0>;
		txd1-dly = <0>;
		txd2-dly = <0>;
		txd3-dly = <0>;
		txd4-dly = <0>;
		txd5-dly = <0>;
		txd6-dly = <0>;
		txd7-dly = <0>;
		rxclk-i-dly = <4>;
		rxclk-i-inv = <0>;
		rxdv-dly = <0>;
		rxer-dly = <0>;
		rxd0-dly = <0>;
		rxd1-dly = <0>;
		rxd2-dly = <0>;
		rxd3-dly = <0>;
		rxd4-dly = <0>;
		rxd5-dly = <0>;
		rxd6-dly = <0>;
		rxd7-dly = <0>;
		crs-dly = <0>;
		col-dly = <0>;
		pinctrl-names = "default", "mii", "rmii", "rgmii";
		pinctrl-0 = <>;
		pinctrl-1 = <&gmac1_mdc &gmac1_mdio &gmac1_col &gmac1_crs &gmac1_txer &gmac1_rxer
					 &gmac1_txclk &gmac1_txen &gmac1_txd0 &gmac1_txd1 &gmac1_txd2 &gmac1_txd3
					 &gmac1_rxclk &gmac1_rxdv &gmac1_rxd0 &gmac1_rxd1 &gmac1_rxd2 &gmac1_rxd3>;
		pinctrl-2 = <&gmac1_mdc &gmac1_mdio
					 &gmac1_txclk &gmac1_txen &gmac1_txd0 &gmac1_txd1
					 &gmac1_rxer &gmac1_rxdv &gmac1_rxd0 &gmac1_rxd1>;
		pinctrl-3 = <&gmac1_mdc &gmac1_mdio
					 &gmac1_txclk &gmac1_txen &gmac1_txd0 &gmac1_txd1 &gmac1_txd2 &gmac1_txd3
					 &gmac1_rxclk &gmac1_rxdv &gmac1_rxd0 &gmac1_rxd1 &gmac1_rxd2 &gmac1_rxd3>;
	};

	/* evt0/evt1 */
	pcie@11500000 {
		reset-gpio = <&gpg 13 0>;
		status = "okay";
	};

	pcie@11680000 {
		reset-gpio = <&gpg 13 0>;
		status = "okay";
	};

	thermal@14700000 {
		compatible = "telechips,tcc-thermal";
		reg = <0x14700000 0x4 0x14700030 0x4 0x14200290 0x4 0x1420029C 0x4>;
		clocks = <&clk_isoip_top ISOIP_TOP_TSEN>;
		status = "okay";

		throttle_count = <5>;
		throttle_active_count = <0>;
		throttle_passive_count = <5>;

		cal_type = "TYPE_ONE_POINT_TRIMMING";
		polling-delay-idle = <0>;
		polling-delay-passive = <0>;

		throttle_table {
			throttle_tab_0 {
				temp = <75>;
				freq_max_cluster0 = <1000000>;
				freq_max_cluster1 = <900000>;
			};
			throttle_tab_1 {
				temp = <80>;
				freq_max_cluster0 = <900000>;
				freq_max_cluster1 = <810000>;
			};
			throttle_tab_2 {
				temp = <85>;
				freq_max_cluster0 = <800000>;
				freq_max_cluster1 = <720000>;
			};
			throttle_tab_3 {
				temp = <90>;
				freq_max_cluster0 = <700000>;
				freq_max_cluster1 = <630000>;
			};
			throttle_tab_4 {
				temp = <95>;
				freq_max_cluster0 = <600000>;
				freq_max_cluster1 = <540000>;
			};
		};
	};

	cpu-id@14200290{
		compatible = "telechips,tcc-cpu-id";
		reg = <0x14200290 0x4 0x14200298 0x4 0x1420029C 0x4 0x14400014 0x4>;
		status = "okay";
	};

	run-control {
		compatible = "gpio-leds";
		blue {
			gpios = <&gpc 15 0>;
			default-state = "on";
		};
		red {
			gpios = <&gpc 22 1>;
			default-state = "on";
		};
	};
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart4_data>;
	status = "okay";
};
