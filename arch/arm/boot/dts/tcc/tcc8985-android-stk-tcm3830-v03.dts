/dts-v1/;

#include "tcc8985.dtsi"
#include "tcc898x-android.dtsi"

/ {
	model = "Telechips TCC8985 Stick (TCM3830) Board";
	compatible = "telechips,tcc8985", "telechips,tcc898x";

	chosen {
	};

	memory@20000000 {
		device_type = "memory";
		reg = <0x20000000 0x80000000>;
	};

	cpus {
		cpu@0 {
			operating-points = <
				/* kHz    uV */
				998000 1000000
				817000  900000
			>;
		};
	};

	cpu0-regulators {
		compatible = "regulator-gpio";

		regulator-name = "vdd_cpu0";
		regulator-min-microvolt = < 900000>;
		regulator-max-microvolt = <1000000>;
		regulator-type = "voltage";
		regulator-always-on;

		gpios = <&gpf 0 0x4>;
		gpios-states = <1>;

		states = < 900000 0x0
			   1000000 0x0>;

		startup-delay-us = <100000>;
		enable-active-high;
	};

	panel {
		status = "okay";
		compatible = "telechips,hdmi1920x1080";
	};

	output_starter {
		status = "okay";
		persist_display_mode = <0>;
	};

	overlaymixer:overlaymixer@1A100000 {
		status ="okay";
		contiguousSize = <0x1000000>;  /* 16MB (if > 512MB RAM) refer to Guide 27 Page */
		baseAddress = <0x20000000>;
		physSize = <0x80000000>; /*  DRAM size (0x40000000 = 1GB, 0x80000000 = 2GB) */
	};

	fbdisplay: fbdisplay@12000000 {
		telechips,fbdisplay_num = <0>;
		status ="okay";
	};

	tcc_vsync_drv {
		compatible = "telechips,tcc_vsync";
		display-vioc0 = <&vioc_display0>;
		display-vioc1 = <&vioc_display1>;
		status = "okay";
	};

	tcc_video_viqe {
		compatible = "telechips,tcc_viqe";
		status ="okay";
		tcc_viqe_viqe_common {
			board_num=<1>;
		};
	};

	scaler_drv@1 {
		rdmas = <&vioc_rdma16>;
		scalers = <&vioc_sc1 17>;	/* id:1, path:17 */
		wmixs = <&vioc_wmix5 6>;	/* id:5, path:6 */
		wdmas = <&vioc_wdma6>;
		settop_support = <1>;
		status = "okay";
	};

	scaler_drv@3 {
		rdmas = <&vioc_rdma7>;
		scalers = <&vioc_sc3 7>;	/* id:3, path:7 */
		wmixs = <&vioc_wmix1 2>;	/* id:1, path:2 */
		wdmas = <&vioc_wdma1>;
		settop_support = <1>;
		status = "okay";
	};

	wmixer_drv@0 {
		status = "okay";
	};

	wmixer_drv@1 {
		status = "okay";
	};

	sdhc@16440000 { // Wi-Fi tcm3830
		status = "okay";
		controller-id = <0>;
		bus-width = <4>;
		max-frequency = <200000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd0_1_4_idle>;
		pinctrl-1 = <&sd0_1_clk &sd0_1_cmd &sd0_1_bus4 &out1_clk>;
		clocks = <&clk_peri PERI_SDMMC0 &clk_io IOBUS_SDMMC0 &clk_peri PERI_OUT1>;
		clock-names = "mmc_fclk", "mmc_hclk", "ext32";
		cd-inverted;
		//wp-inverted;
		//non-removable;
		//broken-cd;
		keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

		//wp-gpios = <&gpb 7 0>;
		//cd-gpios = <&gpext1 5 0>;
		//vctrl-gpio = <&gpc 25 0>;
		//pwr-gpio = <&gpext2 7 0>;

		//cd-polling;
		wifi-polling;
		ext32-enable; // make_rtc

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
		//cap-1-8V-ddr;
		//cap-uhs-ddr50;

		/* SD3.0 & eMMC HS200 Common */
		cap-vdd-165-195;

		/* SD3.0 SDR12 */
		//cap-uhs-sdr12;

		/* SD3.0 SDR25 */
		//cap-uhs-sdr25;
		//cap-uhs-driver_type_a;

		/* SD3.0 SDR50 */
		//cap-uhs-sdr50;
		//cap-uhs-driver_type_c;

		/* SD3.0 SDR104 */
		cap-uhs-sdr104;
		cap-uhs-driver_type_d;
		cap-uhs-cmd23;
		cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	tcm3800 {
		compatible = "telechips, tcm3800";
		wlreg_on-gpio = <&gpd 10 0>;
	};

	tcc_bluetooth {
		compatible = "telechips, tcc_bluetooth";
		bt_wake-gpios = <&gpd 3 0>;
		bt_hwake-gpio = <&gpd 8 0>;
		bt_reg_on-gpio = <&gpd 2 0>;
//		bt_power-gpio = <&gpext2 10 0>;
		wifi_reg_on-gpio = <&gpd 10 0>;
		status = "okay";
	};

	sdhc@16450000 { // eMMC Boot
		status = "okay";
		controller-id = <1>;
		bus-width = <8>;
		max-frequency = <200000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd1_1_idle>;
		pinctrl-1 = <&sd1_1_clk &sd1_1_cmd &sd1_1_bus8>;
		//cd-inverted;
		//wp-inverted;
		non-removable;
		//broken-cd;
		//keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

		//wp-gpios = <&gpb 7 0>;
		//cd-gpios = <&gpext1 5 0>;
		//vctrl-gpio = <&gpsd 10 0>;
		//pwr-gpio = <&gpext2 7 0>;
		emmc-rst-gpio = <&gpa 6 0>; // To do : add handling code

		cd-polling;
		//wifi-polling;

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
		//cap-1-8V-ddr;
		//cap-uhs-ddr50;

		/* SD3.0 Common */
		//cap-vdd-165-195;

		/* SD3.0 SDR12 */
		//cap-uhs-sdr12;

		/* SD3.0 SDR25 */
		//cap-uhs-sdr25;
		//cap-uhs-driver_type_a;

		/* SD3.0 SDR50 */
		//cap-uhs-sdr50;
		//cap-uhs-driver_type_c;

		/* SD3.0 SDR104 */
		//cap-uhs-sdr104;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	hdmi_tx_20@12400000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_hpd>;
		hdmi_i2c_mapping = <&i2c3>;
		hdmi_i2c_mapping_val = <0xC 0xF 0x0E>;
		verbose = <0>; // 0 disable, 1 basic, 2 io
		gpios = <&gphdmi 1 0>; // HPD for output starter
		hdmi_phy_type = <1>; // 0 8980, 1 8985
	};

	hdmi_cec_20@16053000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_cec>;
	};

	// HDMI
	i2c@16330000 {
		port-mux = <14>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c14_bus>;
	};

	/* USB 2.0 HOST */
	ehci_phy@111A0010{
		status = "okay";
	};

	mux_host_phy@111A00DC {
		status = "okay";
	};

	dwc_otg_phy@111A0100 {
		status = "okay";
	};

	ehci@11200000 {
		status = "okay";
		hcd_id = <0>;
		phy-type = <1>;	    //pico phy = 1, nano phy = 0
	};

	ohci@11300000 {
		status = "okay";
	};

	/* USB 2.0 OTG */
	dwc_otg@11080000 {
	    status = "okay";
	    phy-type = <1>;     //pico phy = 1, nano phy = 0

	};

	audio_chmux@16051000{
		compatible = "telechips,audio-chmux-898x";
		dai = <99 1>; // i2s0(x) i2s1(x)
		cdif = <99 1>; // cdif0(x) cdif1(x)
		spdif = <99 1>; // spdif0(x) spdif1(x)
		status = "okay";
	};

	i2s@16101000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_clks &m0dai1_d0>;
		status = "disable";
	};

	i2s@16201000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_clks &m1dai1_d0>;
		status = "okay";
	};

	spdif@16102000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_spdif_tx>;
		status = "disable";
	};

	spdif@16202000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_spdif_tx>;
		status = "okay";
	};

	adma@16100000 {
		status = "disable";
	};

	adma@16200000 {
		status = "okay";
	};

	wm8524: wm8524@0 {
		compatible = "wolfson,wm8524";
		status = "okay";

		codec_aif-gpios = <&gpd 6 0>;
		codec_mute_ang-gpios = <&gpsd1 7 0>;
		codec_mute_ctl-gpios = <&gpc 30 0>;
		/* value to enable mute*/
		codec_mute_ang-mute_value = <0>;
	};

	sound@0 {
		compatible = "telechips,snd-card";
		card-name = "TCC8980 STB Card";
		status = "okay";

		telechips,dai-link@0 {
			stream-name="I2S_1";

			codec,format = "i2s"; // i2s, left_j, right_j
			codec,continuous-clock;

			mclk_div = <16>; // 4,6,8,16
			bclk_ratio = <64>; // 32,48,64fs
			pcm = <&adma1>;
			dai = <&i2s1>;
			codec = <&wm8524>;
			codec,dai-name = "wm8524-hifi";
		};

		telechips,dai-link@1 {
			stream-name="SPDIF_1";

			pcm = <&adma1>;
			dai = <&spdif1>;
		};
	};

	thermal@14700000 {
		compatible = "telechips,tcc-thermal";
		reg = <0x14700000 0x4 0x14700030 0x4 0x14200290 0x4 0x1420029C 0x4>;
		clocks = <&clk_isoip_top ISOIP_TOP_TSEN>;
		status = "okay";

		throttle_count = <5>;
		throttle_active_count = <0>;
		throttle_passive_count = <5>;

		cal_type = "TYPE_ONE_POINT_TRIMMING";
		polling-delay-idle = <0>;
		polling-delay-passive = <0>;

		throttle_table {
			throttle_tab_0 {
				temp = <75>;
				freq_max_cluster0 = <1000000>;
				freq_max_cluster1 = <900000>;
			};
			throttle_tab_1 {
				temp = <80>;
				freq_max_cluster0 = <900000>;
				freq_max_cluster1 = <810000>;
			};
			throttle_tab_2 {
				temp = <85>;
				freq_max_cluster0 = <800000>;
				freq_max_cluster1 = <720000>;
			};
			throttle_tab_3 {
				temp = <90>;
				freq_max_cluster0 = <700000>;
				freq_max_cluster1 = <630000>;
			};
			throttle_tab_4 {
				temp = <95>;
				freq_max_cluster0 = <600000>;
				freq_max_cluster1 = <540000>;
			};
		};
	};

	cpu-id@14200290{
		compatible = "telechips,tcc-cpu-id";
		reg = <0x14200290 0x4 0x14200298 0x4 0x1420029C 0x4 0x14400014 0x4>;
		status = "okay";
	};

	run-control {
		compatible = "gpio-leds";
		blue {
			gpios = <&gpf 22 1>;
			default-state = "on";
		};
		red {
			gpios = <&gpf 23 0>;
			default-state = "on";
		};
	};
};

/* Console */
&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart12_data>;
	status = "okay";
};

/* Bluetooth */
&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_data &uart3_rtscts>;
	status = "okay";
};
