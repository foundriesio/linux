/dts-v1/;

/*#include "tcc8031-linux-avn.dtsi"*/
#include "tcc8030-linux-lpd4321_sv0.1.dts"

/ {
	/* Describe here after remove this statement
	 *if you have something to be override.
	 */

	/delete-node/ sound@0;

    //for T_SND move sound card from a53 to a7

	//i2s0 - disable (using in A7)
	i2s@16101000 {
		status = "disabled";
	};

	//adma0 - disable (using in A7)
	adma@16100000 {
		status = "disabled";
	};

	//spdif0 - disable
	spdif@16102000 {
		status = "disabled";
	};

	//ak4601 control - disable
	i2c@16320000 {
		status = "disabled";
	};

	/*
	 * //This is ref.code
	 *sound@0 {
	 *	compatible = "telechips,snd-card";
	 *	card-name = "TCC8031 EVM Card";
	 *	status = "okay";
	 *
	 *	telechips,dai-link@0 {
	 *		stream-name="I2S_3";
	 *		codec,format = "i2s"; // i2s, left_j, right_j
	 *		codec,continuous-clock;
	 *		mclk_div = <16>; // 4,6,8,16
	 *		bclk_ratio = <64>; // 32,48,64fs
	 *		pcm = <&adma3>;
	 *		dai = <&i2s3>;
	 *	};
	 *
	 *	telechips,dai-link@1 {
	 *		stream-name="SPDIF_1_RX";
	 *		pcm = <&adma3>;
	 *		dai = <&spdif3>;
	 *	};
	 *
	 *};
	 */

	audio_mbox@0 {
		status = "okay";
	};

	audio_mbox@1 {
		status = "okay";
	};

	ak4601_virtual: ak4601@20 {
		compatible = "akm,ak4601-virtual";
		status = "okay";
	};

	vi2s@0 {
		status = "okay";
	};

	vi2s@1 {
		status = "okay";
	};

	vi2s@2 {
		status = "okay";
	};

	vi2s@3 {
		status = "okay";
	};


	//asrc0: asrc@16500000 {
	asrc@16500000 {
		sync-mode = <1 1 1 1>; // 0:async, 1:sync
		path-type = <0 0 0 0>; // 0:m2m, 1:m2p, 2:p2m
		//path-type = <1 1 1 2>; // 0:m2m, 1:m2p, 2:p2m
		status = "okay";
	};

	//Main Media / Capture(4ch)
	asrc_m2m_pcm@0 {
		asrc = <&asrc0>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		playback-pair-id = <1>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		capture-pair-id = <0>;
		//0~5: tx to mixer, 6~8: general, undefine or 99: disable.
		playback-amd-cmd = <0>;
		//0~5: tx to mixer, 6~8: general, undefine or 99: disable.
		capture-amd-cmd = <8>;
		status = "okay";
	};

	//Sub 1
	asrc_m2m_pcm@1 {
		asrc = <&asrc0>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		playback-pair-id = <2>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		capture-pair-id = <99>;
		//0~5: tx to mixer, 6~8: general, undefine or 99: disable.
		playback-amd-cmd = <1>;
		status = "okay";
	};

	//Sub 2
	asrc_m2m_pcm@2 {
		asrc = <&asrc0>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		playback-pair-id = <3>;
		//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
		capture-pair-id = <99>;
		//0~5: tx to mixer, 6~8: general, undefine or 99: disable.
		playback-amd-cmd = <2>;
		status = "okay";
	};

	/*
	 * //RSE
	 *asrc_m2m_pcm@3 {
	 *	asrc = <&asrc0>;
	 *	//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
	 *	playback-pair-id = <99>;
	 *	//0: multi-ch, 1, 2, 3: stereo, undefine or 99: disable.
	 *	capture-pair-id = <99>;
	 *	//0~5: tx to mixer, 6~8: general, undefine or 99: disable.
	 *	playback-amd-cmd = <6>;
	 *	status = "okay";
	 *};
	 */

	/*
	 * //This is ref. code
	 * //T-sound sound card 1
	 *sound@1 {
	 *	compatible = "telechips,vir-snd-card";
	 *	card-name = "TCC8031 EVM Virtual Card";
	 *	status = "okay";
	 *
	 *	//Main Media, Capture (4ch)
	 *	telechips,dai-link@0 {
	 *		stream-name="virI2S_0";
	 *		codec,format = "i2s";
	 *		pcm = <&asrc_m2m_pcm0>;
	 *		dai = <&vi2s0>;
	 *		codec = <&ak4601_virtual>;
	 *		codec,dai-name = "ak4601-vir-aif";
	 *	};
	 *
	 *	//Sub 1
	 *	telechips,dai-link@1 {
	 *		stream-name="virI2S_1";
	 *		codec,format = "i2s";
	 *		pcm = <&asrc_m2m_pcm1>;
	 *		dai = <&vi2s1>;
	 *		playback-only;
	 *	};
	 *
	 *	//Sub 2
	 *	telechips,dai-link@2 {
	 *		stream-name="virI2S_2";
	 *		codec,format = "i2s";
	 *		pcm = <&asrc_m2m_pcm2>;
	 *		dai = <&vi2s2>;
	 *		playback-only;
	 *	};
	 *
	 *};
	 */

	//T-sound sound card 0
	sound@0 {
		compatible = "telechips,snd-card";
		card-name = "TCC8031 EVM Card";
		status = "okay";

		//T-sound - Main Media, Capture (4ch)
		telechips,dai-link@0 {
			stream-name="virI2S_0";
			codec,format = "i2s";
			pcm = <&asrc_m2m_pcm0>;
			dai = <&vi2s0>;
			codec = <&ak4601_virtual>;
			codec,dai-name = "ak4601-vir-aif";
		};

		//T-sound - Sub 1
		telechips,dai-link@1 {
			stream-name="virI2S_1";
			codec,format = "i2s";
			pcm = <&asrc_m2m_pcm1>;
			dai = <&vi2s1>;
			playback-only;
		};

		//spdif 1 RX
		telechips,dai-link@2 {
			stream-name="SPDIF_1_RX";
			pcm = <&adma3>;
			dai = <&spdif3>;
			capture-only;
		};

		//BT Tx and Rx
		telechips,dai-link@3 {
			stream-name="I2S_3";
			codec,format = "i2s"; // i2s, left_j, right_j
			codec,continuous-clock;
			mclk_div = <16>; // 4,6,8,16
			bclk_ratio = <64>; // 32,48,64fs
			pcm = <&adma3>;
			dai = <&i2s3>;
		};

		//T-sound - Sub 2
		telechips,dai-link@4 {
			stream-name="virI2S_2";
			codec,format = "i2s";
			pcm = <&asrc_m2m_pcm2>;
			dai = <&vi2s2>;
			playback-only;
		};
	};
};
