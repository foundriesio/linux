&videoinput4 {
	status		= "okay";
	cifport		= <&cifport		5>;
	memory-region	= <0 0 &pmap_rearcamera4>;
	port {
		videoinput4_in: endpoint {
			remote-endpoint	= <&mipi_csi2_0_out0>;
			io-direction	= "input";
			bus-type	= <0>;
			stream-enable	= <1>;	// VIN_CTRL.SE
			flush-vsync	= <1>;	// VIN_MISC.FVS
		};
	};
};

