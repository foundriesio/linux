    opp@592000000 {
        opp-hz = /bits/ 64 <390000000>;
        opp-core-mask = /bits/ 64 <0x3>;
    };
    opp@666000000 {
        opp-hz = /bits/ 64 <380000000>;
        opp-core-mask = /bits/ 64 <0x3>;
    };
*/
};
