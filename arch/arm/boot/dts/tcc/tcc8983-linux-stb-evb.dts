		/* SD3.0 SDR104 */
		//cap-uhs-sdr104;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	sdhc@16460000 { // SD Card
		status = "okay";
		controller-id = <2>;
		bus-width = <8>;
		max-frequency = <200000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd2_1_idle>;
		pinctrl-1 = <&sd2_1_clk &sd2_1_cmd &sd2_1_bus8>;
		cd-inverted;
		//wp-inverted;
		//non-removable;
		//broken-cd;
		//keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

		wp-gpios = <&gpext1 4 0>;
		cd-gpios = <&gpext1 5 0>;
		vctrl-gpio = <&gpsd0 10 0>;
		pwr-gpio = <&gpext2 7 0>;

		//cd-polling;
		//wifi-polling;

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
		//cap-1-8V-ddr;
		//cap-uhs-ddr50;

		/* SD3.0 Common */
		//cap-vdd-165-195;

		/* SD3.0 SDR12 */
		//cap-uhs-sdr12;

		/* SD3.0 SDR25 */
		//cap-uhs-sdr25;
		//cap-uhs-driver_type_a;

		/* SD3.0 SDR50 */
		//cap-uhs-sdr50;
		//cap-uhs-driver_type_c;

		/* SD3.0 SDR104 */
		//cap-uhs-sdr104;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;

		/* eMMC HS200 */
		//mmc-hs200-1_8v;
		//cap-uhs-driver_type_d;
		//cap-uhs-cmd23;
		//cap-adma;
	};

	hdmi_tx_20@12400000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_hpd>;
		hdmi_i2c_mapping = <&i2c3>;
		hdmi_i2c_mapping_val = <0xC 0xF 0x0E>;
		verbose = <0>; // 0 disable, 1 basic, 2 io
		gpios = <&gphdmi 1 0>; // HPD for output starter
		hdmi_phy_type = <0>; // 0 8980, 1 8985_OTT
	};

	hdmi_cec_20@16053000 {
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&hdmi_cec>;
	};

	i2c@16300000 {
		port-mux = <8>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c8_bus>;

		gpext1: pca950x@20 {
			compatible = "nxp,pca9506";
			reg = <0x20>;
			#gpio-cells = <2>;
		};
		gpext2: pca950x@21 {
			compatible = "nxp,pca9506";
			reg = <0x21>;
			#gpio-cells = <2>;
		};
		wm8731: wm8731@1a {
			compatible = "wm8731";
			reg = <0x1a>;
		};
		wm8581: wm8581@1b {
			compatible = "wm8581";
			reg = <0x1b>;
		};

		pmic0: da9062@58 {
			compatible = "dlg,da9062";
			reg = <0x58>;
			int-gpios = <&gpc 25 0>;

			onkey {
				compatible = "dlg,da9062-onkey";
				dlg,disable-key-power;
			};

			regulators {
				DA9062_BUCK1: buck1 {
					regulator-name = "vdd_cpu0";
					regulator-min-microvolt = <300000>;
					regulator-max-microvolt = <1570000>;
					regulator-min-microamp = <500000>;
					regulator-max-microamp = <2000000>;
					regulator-always-on;
				};
				DA9062_BUCK2: buck2 {
					regulator-name = "vdd_gv";
					regulator-min-microvolt = <300000>;
					regulator-max-microvolt = <1570000>;
					regulator-min-microamp = <500000>;
					regulator-max-microamp = <2000000>;
					regulator-always-on;
				};
				DA9062_BUCK3: buck3 {
					regulator-name = "vdd_core";
					regulator-min-microvolt = <800000>;
					regulator-max-microvolt = <3340000>;
					regulator-min-microamp = <500000>;
					regulator-max-microamp = <2000000>;
					regulator-always-on;
				};
				DA9062_BUCK4: buck4 {
					regulator-name = "vdd_cpu1";
					regulator-min-microvolt = <530000>;
					regulator-max-microvolt = <1800000>;
					regulator-min-microamp = <500000>;
					regulator-max-microamp = <2000000>;
					regulator-always-on;
				};
				DA9062_LDO1: ldo1 {
					regulator-name = "vdd_io";
					regulator-min-microvolt = <900000>;
					regulator-max-microvolt = <3600000>;
					regulator-always-on;
				};
			};
		};
	};

	i2c@16310000 {
		port-mux = <10>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c10_bus>;

		ilitek@41 {
			compatible = "ilitek,aimvF";
			reg = <0x41>;
			int-gpios = <&gpb 28 0>;
			rst-gpios = <&gpext2 3 0>;
		};
		gt813@5d {
			compatible = "goodix,gt813";
			reg = <0x5d>;
			int-gpios = <&gpb 28 0>;
			rst-gpios = <&gpext2 3 0>;
		};
		vtl_ct26x@01 {
			compatible = "vtl,ct36x";
			reg = <0x01>;
			int-gpios = <&gpb 28 0>;
			rst-gpios = <&gpext2 3 0>;
		};
	};

	i2c@16320000 {
		port-mux = <11>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c11_bus>;

		camera@40 {
			compatible = "tcc_camera,0x40";
			reg = <0x20>;
		};
		camera@42 {
			compatible = "tcc_camera,0x42";
			reg = <0x21>;
		};
		camera@5A {
			compatible = "tcc_camera,0x5A";
			reg = <0x2D>;
		};
		camera@66 {
			compatible = "tcc_camera,0x66";
			reg = <0x33>;
		};
		camera@78 {
			compatible = "tcc_camera,0x78";
			reg = <0x3C>;
		};
		camera@7A {
			compatible = "tcc_camera,0x7A";
			reg = <0x3D>;
		};
		camera@B8 {
			compatible = "tcc_camera,0xB8";
			reg = <0x5C>;
		};
	};

	i2c@16330000 {
		port-mux = <14>;
		status = "okay";
		pinctrl-names = "default";
		pinctrl-0 = <&i2c14_bus>;
	};

	/* USB 3.0 DRD */
	dwc3@11900000 {
//		status = "okay";
		usb3en-ctrl-able;
		usb3en-gpio = <&gpext1 33 0>;
		vbus-source-ctrl;
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 35 0>;
		//pinctrl-names = "default";
		vdd_dwc-supply = <&vdd_v5p0_reg>;
	};

	/* USB 2.0 HOST */
	ehci_phy@111A0010 {
		status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
	};

	mux_host_phy@111A00DC {
		//status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
	};

	dwc_otg_phy@111A0100 {
		//status = "okay";
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
	};

	ehci@11200000 {
		status = "okay";
		hcd_id = <0>;
		phy-type = <1>;	    //pico phy = 1, nano phy = 0
		hosten-ctrl-able;
		hosten-gpio = <&gpext1 34 0>;
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
		vbus-source-ctrl;
		//pinctrl-names = "default";
		vdd_ehci-supply = <&vdd_v5p0_reg>;

		//sq_level_ctl;
		TXVRT = <0xB>;
		TXRISET = <0x3>;
		TXAT = <0x1>;
	};

	ohci@11300000 {
		status = "okay";
		hosten-ctrl-able;
		hosten-gpio = <&gpext1 34 0>;
		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
		vbus-source-ctrl;
		vdd_ohci-supply = <&vdd_v5p0_reg>;
	};

	dwc_otg@11080000 {
//		status = "okay";
		phy-type = <1>;     //pico phy = 1, nano phy = 0

		vbus-ctrl-able;
		vbus-gpio = <&gpext2 36 0>;
	};

	audio_chmux@16051000{
		compatible = "telechips,audio-chmux-898x";
		dai = <99 1>; // i2s0(x) i2s1(x)
		cdif = <99 1>; // cdif0(x) cdif1(x)
		spdif = <99 1>; // spdif0(x) spdif1(x)
		status = "okay";
	};

	i2s@16101000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_clks &m0dai1_d0>;
		status = "disable";
	};

	i2s@16201000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_clks &m1dai1_d0>;
		status = "okay";
	};

	spdif@16102000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m0dai1_spdif_tx>;
		status = "disable";
	};

	spdif@16202000 {
		pinctrl-names = "default";
		pinctrl-0 = <&m1dai1_spdif_tx>;
		status = "okay";
	};

	adma@16100000 {
		status = "disable";
	};

	adma@16200000 {
		status = "okay";
	};

	wm8524: wm8524@0 {
		compatible = "wolfson,wm8524";
		status = "okay";

		codec_aif-gpios = <&gpd 6 0>;
		codec_mute_ang-gpios = <&gpsd1 7 0>;
		codec_mute_ctl-gpios = <&gpc 30 0>;
		/* value to enable mute*/
		codec_mute_ang-mute_value = <0>;
	};

	sound@0 {
		compatible = "telechips,snd-card";
		card-name = "TCC8980 STB Card";
		status = "okay";

		telechips,dai-link@0 {
			stream-name="I2S_1";

			codec,format = "i2s"; // i2s, left_j, right_j
			codec,continuous-clock;

			mclk_div = <16>; // 4,6,8,16
			bclk_ratio = <64>; // 32,48,64fs
			pcm = <&adma1>;
			dai = <&i2s1>;
			codec = <&wm8524>;
			codec,dai-name = "wm8524-hifi";
		};

		telechips,dai-link@1 {
			stream-name="SPDIF_1";

			pcm = <&adma1>;
			dai = <&spdif1>;
		};
	};

	tcc_pm {
		wakeup,powerkey = <PMU_WKUP_GP_C27 WAKEUP_ACT_LO>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		vdd_v5p0_reg: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "vdd_v5p0";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			gpio = <&gpext1 32 0>;
			enable-active-high;
		};
	};

	thermal@14700000 {
		compatible = "telechips,tcc-thermal";
		reg = <0x14700000 0x4 0x14700030 0x4 0x14200290 0x4 0x1420029C 0x4>;
		clocks = <&clk_isoip_top ISOIP_TOP_TSEN>;
		status = "okay";

		throttle_count = <5>;
		throttle_active_count = <0>;
		throttle_passive_count = <5>;

		cal_type = "TYPE_ONE_POINT_TRIMMING";
		polling-delay-idle = <0>;
		polling-delay-passive = <0>;

		throttle_table {
			throttle_tab_0 {
				temp = <75>;
				freq_max_cluster0 = <1000000>;
				freq_max_cluster1 = <900000>;
			};
			throttle_tab_1 {
				temp = <80>;
				freq_max_cluster0 = <900000>;
				freq_max_cluster1 = <810000>;
			};
			throttle_tab_2 {
				temp = <85>;
				freq_max_cluster0 = <800000>;
				freq_max_cluster1 = <720000>;
			};
			throttle_tab_3 {
				temp = <90>;
				freq_max_cluster0 = <700000>;
				freq_max_cluster1 = <630000>;
			};
			throttle_tab_4 {
				temp = <95>;
				freq_max_cluster0 = <600000>;
				freq_max_cluster1 = <540000>;
			};
		};
	};

};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart13_data>;
	dma-names = "tx";
	status = "okay";
};
