		controller-id = <0>;
		bus-width = <4>;
		max-frequency = <50000000>;
		pinctrl-names = "default", "active";
		pinctrl-0 = <&sd0_1_idle>;
		pinctrl-1 = <&sd0_1_clk &sd0_1_cmd &sd0_1_bus4>;
		cd-inverted;
		//wp-inverted;
		//non-removable;
		//broken-cd;
		keep-power-in-suspend;
		//enable-sdio-wakeup;
		//cap-power-off-card;
		cap-sdio-irq;
		cap2-no-sleep-cmd;
		cap-bus-width-test;

		//wp-gpios = <&gpb 7 0>;
		//cd-gpios = <&gpext1 5 0>;
		//vctrl-gpio = <&gpsd 10 0>;
		//pwr-gpio = <&gpext2 7 0>;

		//cd-polling;
		wifi-polling;

		/* High-speed SDR */
		cap-sd-highspeed;
		cap-mmc-highspeed;

		/* High-speed DDR(emmc & SD3.0 DDR50) */
